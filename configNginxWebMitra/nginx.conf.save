server {
   listen 80;
   server_name fandupratama.xyz www.fandupratama.xyz;
   return 301 https://$host$request_uri;
}

server {
   listen 443 ssl;
   server_name fandupratama.xyz www.fandupratama.xyz;

   ssl_certificate /etc/nginx/ssl/fandupratama_xyz.crt;
   ssl_certificate_key /etc/nginx/ssl/fandupratama_xyz.key;
   ssl_trusted_certificate /etc/nginx/ssl/intermediate.pem;

   # Opsional: Aktifkan Protokol SSL yang aman
